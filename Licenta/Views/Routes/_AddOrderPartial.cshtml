@using Licenta.ViewModels.Routes;
@model AddOrderViewModel

    <input type="hidden" asp-for="RouteId" />

    <div class="form-group text-center">
        <label asp-for="OrderId"></label>
        <div class=" d-flex justify-content-around align-text-bottom">
            <select style="min-width: 60%" asp-for="OrderId" asp-items="@Model.OrderList">
            </select>
        </div>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <label asp-for="Type"></label>
        <div class=" d-flex justify-content-around align-text-bottom">
           @Html.DropDownListFor( t => t.Type, new SelectList(Enum.GetValues(typeof(Licenta.Model.OrderType))))
        </div>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
